{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "command": "hugo server",
            "isBackground": true,
            "label": "Serve",
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem"
            },
            "problemMatcher": [
                {
                    "owner": "go",
                    "fileLocation": [
                        "absolute"
                    ],
                    "pattern": {
                        "regexp": "^(ERROR) ([0-9 /:]*) ([^:]*: [^:]*): \"(.*):(.*):(.*)\": (.*)",
                        "file": 4,
                        "line": 5,
                        "column": 6,
                        "severity": 1,
                        "message": 7
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Change detected, rebuilding site",
                        "endsPattern": "Total in \\d+ ms"
                    }
                }
            ]
        }
    ]
}